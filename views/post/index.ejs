  <div class="col-md-8" id="post-form-main">
    <h1 id="title" style="color:black;">作夥論壇—發表文章</h1>
    <div class="row-fluid">
      <div class="span10" id="postArea">
        <div class="row-fluid">
          <label style="font-size:25px;">文章標題</label><br><input type="text" name="postTitle" class="s" id="postTitle" style='margin-bottom: 20px;'><br>
        </div>
        <div class="row-fluid">
          <label style="font-size:25px;">文章分類</label>
          <form id="articleClass">
            <label><input type=radio name="classification" class="c" value="病況與心情">病況與心情</label>
            <label><input type=radio name="classification" class="c" value="分享">分享</label>
            <label><input type=radio name="classification" class="c" value="問題">問題</label>
            <label><input type=radio name="classification" class="c" value="其它" style='margin-bottom: 20px;'>其它</label><br>
          </form>
        </div> 
        <div class="row-fluid">
          <label style="font-size:25px; margin-top:10px;">文章內容</label>
          <div id="postPanel" class="visible-desktop hidden-phone visible-tablet text-right">
            <button value="恢復暫存" id="load" class="b" onclick="load();"><img src="/images/img_forum/back_icon.png"/>恢復至暫存檔</button>
            <button value="暫存" id="save" class="b" onclick="save();"><img src="/images/img_forum/save_icon.png"/>暫存</button>
            <button name="image" id="image" value="上傳相片" class="b"><img src="/images/img_forum/images_icon.png"/>上傳相片</button>
            <label id="savedText">已暫存</label>
            <label id="loadedText">已恢復</label>
          </div>
          
          <!--mobile版-->
          <div id="postPanel" class="hidden-desktop visible-phone hidden-tablet text-left">
            <button value="恢復暫存" id="load" class="b" onclick="load();"><img src="/images/img_forum/back_icon.png"/>恢復至暫存檔</button>
            <button value="暫存" id="save" class="b" onclick="save();"><img src="/images/img_forum/save_icon.png"/>暫存</button>
            <button name="image" id="image" value="上傳相片" class="b"><img src="/images/img_forum/images_icon.png"/>上傳相片</button>
            <label id="savedText">已暫存</label>
            <label id="loadedText">已恢復</label>
          </div>
          <!--mobile版-->
        </div>       

        <div class="row-fluid">
          <div contentEditable="true" name="postContent" class="s" id="postContent"></div>
          <div contentEditable="false" name="postContent_image" class="s" id="postContent_image">
            <div class="clear" id="clear"></div>
          </div>
          <button value="確認送出" id="submitArticle" class="b" onclick="post();"><img src="/images/img_forum/check_icon.png"/>確認送出</button>
          <a href="/frontboard?tab=all&sort=createdAt&order=DESC&page=1&search="><button value="取消發表" id="abortArticle" class="b" onclick="abort();"><img src="/images/img_forum/cancel_icon.png"/>取消發表</button></a>
        </div>
      </div>         


    </div>
    <!-- Cropping modal -->
        <div class="modal fade" id="avatar-modal" tabindex="-1" role="dialog" aria-labelledby="avatar-modal-label" aria-hidden="true">
          <div class="modal-dialog modal-lg">
            <div class="modal-content">
              <form class="avatar-form" method="post" action="/imgupload_post" enctype="multipart/form-data">
                <div class="modal-header">
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
                  <h4 class="modal-title" id="avatar-modal-label">上傳相片（讀者點擊縮圖後即可看到原圖）</h4>

                  <div class="spinner">
                    <div class="spinner-container container1">
                      <div class="circle1"></div>
                      <div class="circle2"></div>
                      <div class="circle3"></div>
                      <div class="circle4"></div>
                    </div>
                    <div class="spinner-container container2">
                      <div class="circle1"></div>
                      <div class="circle2"></div>
                      <div class="circle3"></div>
                      <div class="circle4"></div>
                    </div>
                    <div class="spinner-container container3">
                      <div class="circle1"></div>
                      <div class="circle2"></div>
                      <div class="circle3"></div>
                      <div class="circle4"></div>
                    </div>
                  </div>

                </div>
                <div class="modal-body">
                  <div class="avatar-body">
                    <!-- Upload image and data -->
                    <div class="avatar-upload">
                      <input class="avatar-src" name="avatar_src" type="hidden">
                      <input class="avatar-data" name="avatar_data" type="hidden">
                      <input class="avatar-input" id="avatarInput" name="avatar_file" type="file">
                    </div>
                    <!-- Crop and preview -->
                    <div class="row">
                      <div class="col-md-9">
                        <div class="avatar-wrapper"></div>
                      </div>
                      <div class="col-md-3">
                        <div class="avatar-preview preview-lg"></div>
                        <div class="avatar-preview preview-md"></div>
                        <div class="avatar-preview preview-sm"></div>
                      </div>
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                  <button class="imgupload_btn" id="avatar-save" type="submit"><img src="/images/img_forum/check_icon.png"/>上傳</button>
                  <button class="imgupload_btn" type="button" data-dismiss="modal"><img src="/images/img_forum/cancel_icon.png"/>關閉</button>
                </div>
              </form>
            </div>
          </div>
        </div><!-- /.modal -->
  </div>