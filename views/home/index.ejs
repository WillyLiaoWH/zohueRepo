<div id='content' class='col-md-6 col-sm-10 col-xs-10 col-md-offset-1'>
   <div id="homepagePicList">
    <div id='myCarousel' class='carousel slide col-md-11 col-md-offset-1 hidden-phone' data-ride='carousel' align='center' style='width:calc(50%-170px); height:340px;'>
      <ol class='carousel-indicators'>
        <% for(i=0; i<homepagePics.length; i++){ %>
          <% if(i=="0"){ %>
            <li data-target='#myCarousel' data-slide-to='1' class='active'>
          <% } else { %>
            <li data-target='#myCarousel' data-slide-to='<%=i+1%>'></li>
          <% } %>
        <% } %>
      </ol>
    <div class='carousel-inner' role='listbox'>

      <% for(i=0; i<homepagePics.length; i++){ %>
        <% if(i=="0"){ %>
          <div class='item active'>
            <img id='img_0' src='<%=homepagePics[i].pic%>' class='img-responsive' style='min-height: 330px; max-height:340px; max-width:540px;' align='middle' ;>
            </img>
          </div>
          <!-- The Modal -->
          <div id="myModal_<%=i%>" class="modal">

            <!-- The Close Button -->
            <!-- <span class="close" onclick="document.getElementById('myModal').style.display='none'">&times;</span> -->

            <!-- Modal Content (The Image) -->
            <img class="modal-content" id="above_<%=i%>" src='<%=homepagePics[i].pic%>'>

            <!-- Modal Caption (Image Text) -->
            <div id="caption"></div>
          </div>
          

        <% } else { %>
          <div class='item'>
            <img id='img_<%=i%>' src='<%=homepagePics[i].pic%>' class='img-responsive'  style='min-height: 330px; max-height:340px; max-width:540px;' align='middle'></img>
          </div>

          <div id="myModal_<%=i%>" class="modal">

            <!-- The Close Button
            <span class="close" onclick="document.getElementById('myModal').style.display='none'">&times;</span> -->
            <img class="modal-content" id="above_<%=i%>" src='<%=homepagePics[i].pic%>'>

            <!-- Modal Caption (Image Text)
            <div id="caption"></div> -->
          </div>

        <% } %>
      <% } %>

    </div>

    <a class='left carousel-control' href='#myCarousel' role='button' data-slide='prev'>
      <span class='glyphicon glyphicon-chevron-left' aria-hidden='true'></span>
      <span class='sr-only'>Previous</span>
    </a>
    <a class='right carousel-control' href='#myCarousel' role='button' data-slide='next'>
      <span class='glyphicon glyphicon-chevron-right' aria-hidden='true'></span>
      <span class='sr-only'>Next</span>
    </a>
  </div>


  <div ng-app="homeApp" ng-controller="announcementCtrl">
    <div class="col-md-11 col-md-offset-1">
      <table class="table table-condensed table-hover " >
        <thead class="active">
          <tr>
            <th class="col-md-3" colspan=2 style="color:black">最新公告</th>
          </tr>
        </thead>
        <tbody>
          <tr class="active" ng-repeat="todo in announcement">
            <td><b>{{ todo.createdAt.toString().substring(0, 10) }}</b></td>
            <td>
              <a href="./article/{{ todo.id }}">{{ todo.title }}</a>
            </td>
          </tr>
        </tbody>
      </table>
    </div>

    <div class="col-md-11 col-md-offset-1">
      <table class="table table-condensed table-hover " >
        <thead class="active">
          <tr>
            <th class="col-md-3" colspan=2 style="color:black">熱門論壇文章</th>
          </tr>
        </thead>
        <tbody>
          <tr class="active" ng-repeat="todo in topArticles">
            <td><b>{{ todo.createdAt.toString().substring(0, 10) }}</b></td>
            <td>
              <a href="{{ todo.href }}">{{ todo.title }}</a>
            </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>