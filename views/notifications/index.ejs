<!DOCTYPE HTML>
<div id="content" class="col-md-8">
	<%var  local = {};
		local.notMessage=[
		  "在您追蹤的文章留言",
		  "覺得您追蹤的文章",
		  "在您追蹤的動態留言",
		  "覺得您追蹤的動態",
		  "覺得您的回應",
		  "覺得您的留言",
		  "邀請您成為他的好友",
		  "已經和您成為好友了",
		  "在您的牆上留下動態",
		  "發了一則動態",
		  "在平台小幫手發布文章"]
	%>

	<%for(var i=0; i<not.length; i++) { 
	 %>
		<%if(not[i].alreadyRead) { 
		%>
			<div class='not read' id='<%=not[i].id%>'>
		<% } else { %>
			<div class='not unread' id='<%=not[i].id%>'>
		<% } %>

				<div class='image'>
					<%if(not[i].from!=undefined){%>
					<%if(not[i].from.type=="D"){ %>
						<!--<img src='/images/img_forum/doctor_icon.png' title='已認證醫師' style='margin-right:10px; height: 50px; width:50px;'>-->
						<%local.type="醫師"%>
					<%}%> 
					<%if(not[i].from.type=="S"){ %>
						<!--<img src='/images/img_forum/sw_icon.png' title='已認證社工師' style='margin-right:10px; height: 50px; width:50px;'>-->
						<%local.type="社工師"%>
					<%}%>
					<%if(not[i].from.type=="RN"){ %>
						<!--<img src='/images/img_forum/sw_icon.png' title='已認證護理師' style='margin-right:10px; height: 50px; width:50px;'>-->
						<%local.type="護理師"%>
					<%}%>
					<%if(not[i].from.type=="P"){ %>
						<!--<img src='/images/img_forum/user_icon.png' title='病友' style='margin-right:10px; height: 50px; width:50px;'>-->
						<%local.type=""%>
					<%}%>
					<%if(not[i].from.type=="F"){ %>
						<!--<img src='/images/img_forum/user_icon.png' title='家屬' style='margin-right:10px; height: 50px; width:50px;'>-->
						<%local.type=""%>
					<%}%>
					<%if(not[i].from.type=="N"){ %>
						<!--<img src='/images/img_forum/user_icon.png' title='一般民眾' style='margin-right:10px; height: 50px; width:50px;'>-->
						<%local.type=""%>
					<%}%>
					
		        
		        <img src='<%=not[i].from.img%>' onclick='toProfile(\"<%=not[i].from.id %>\")' style='margin-right:10px; cursor: pointer; height: 80px; width:80px;'>
		        </div>
				<div class='message'>
					<a href='/profile/?<%=not[i].from.id%>'><%=not[i].from.alias%></a>
					
					<%=local.type%>
					<%=local.notMessage[parseInt(not[i].notType)-1]%>
					<%if(not[i].content) { %>
          				<%=("「"+not[i].content+'」').replace(/<[^>]*>/g, "")%>
          			<%}%>
          			<%if (not[i].notType==2||not[i].notType==4||not[i].notType==5||not[i].notType==6){%>
      					<%="很讚"%>
      				<%}%>
          		</div>

      			<div class='go'>
      				
      				<%if (not[i].notType==1||not[i].notType==2||not[i].notType==5||not[i].notType==11){%>
      				
          				<button value='查看文章' class='button' onclick='check("<%=not[i].link%>", "<%=not[i].id%>");'>&nbsp查看文章</button>
      				<%}%>

      				<%if (not[i].notType==3||not[i].notType==4||not[i].notType==6||not[i].notType==8||not[i].notType==9||not[i].notType==10){%>
      					<button value='查看動態時報' class='button' onclick='check("<%=not[i].link%>","<%=not[i].id%>");'>&nbsp查看動態時報</button>
      				<%}%>
      				<%if (not[i].notType==7){%>
      					<button value='確認好友' class='button' onclick='confirmFriend(<%=not[i].from.id%>, <%=not[i].id%>);'>&nbsp確認好友</button>
      				<%}%>
      					
      			</div>
      			
				<div class='setRead'>
					<%if(not[i].alreadyRead==false) {%>
					   <button value='設為已讀' class='button' onclick='setRead(<%=not[i].id%>, this);'>&nbsp設為已讀</button>
					<%}%>   
				</div>    
				 <%}%>
				

			
		</div>
	<%}%>
</div>